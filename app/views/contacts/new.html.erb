<h1>Feed back</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_for(@contact) do |f| %>
        <% if @contact.errors.any? %>
            <div>
              <ul>
                <% @contact.errors.full_messages.each do |mes| %>
                    <li class="alert alert-danger"><%= mes %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="form-group">
          <%= f.label 'From: ' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label 'Text: ' %>
          <%= f.text_area :text, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit 'Send', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>



